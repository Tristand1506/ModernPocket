<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".CreateObjective">

    <EditText
        android:id="@+id/objective_name_txt"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:fontFamily="@font/segoeuisl"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/text_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar_create_objective_img" />

    <ImageView
        android:id="@+id/objective_descbox_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_desc_headingtxt2"
        app:srcCompat="@drawable/box" />

    <EditText
        android:id="@+id/objective_desc_txt"
        android:layout_width="373dp"
        android:layout_height="98dp"
        android:ems="10"
        android:fontFamily="@font/segoeuisl"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:boxBackgroundMode="none"
        app:layout_constraintBottom_toBottomOf="@+id/objective_descbox_img"
        app:layout_constraintEnd_toEndOf="@+id/objective_descbox_img"
        app:layout_constraintStart_toStartOf="@+id/objective_descbox_img"
        app:layout_constraintTop_toTopOf="@+id/objective_descbox_img" />

    <ImageView
        android:id="@+id/topbar_create_objective_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_sidebar" />

    <ImageView
        android:id="@+id/task_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/objective_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/topbar_create_objective_img"
        app:srcCompat="@drawable/task_icon" />

    <TextView
        android:id="@+id/item_desc_headingtxt2"
        android:layout_width="107dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Description"
        android:fontFamily="@font/segoeuisl"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_name_txt" />

    <ImageButton
        android:id="@+id/save_create_objective_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/real_red"
        app:layout_constraintBottom_toBottomOf="@+id/topbar_create_objective_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topbar_create_objective_img"
        app:srcCompat="@drawable/checkmark" />

    <ImageButton
        android:id="@+id/x_create_objective_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/real_red"
        app:layout_constraintBottom_toBottomOf="@+id/topbar_create_objective_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topbar_create_objective_img"
        app:srcCompat="@drawable/cross_mark" />

    <TextView
        android:id="@+id/editable_objective_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:text="OBJECTIVE"
        android:fontFamily="@font/segoeuisl"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topbar_create_objective_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topbar_create_objective_img"
        app:layout_constraintTop_toTopOf="@+id/topbar_create_objective_img" />

</androidx.constraintlayout.widget.ConstraintLayout>