<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".LandingPage">

    <ImageButton
        android:id="@+id/lp_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        app:layout_constraintBottom_toTopOf="@+id/lp_signup_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/login_btn" />

    <ImageButton
        android:id="@+id/lp_signup_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/signup_btn" />

    <ImageView
        android:id="@+id/lp_text_img"
        android:layout_width="372dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/lp_signup_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709"
        app:srcCompat="@drawable/lp_text" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="399dp"
        android:layout_height="356dp"
        app:layout_constraintBottom_toTopOf="@+id/lp_text_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lp_bgimage" />


</androidx.constraintlayout.widget.ConstraintLayout>